<?xml version='1.0' encoding='utf-8'?>
<plugin
        id="com.azitlab.cordova-plugin-badge" version="0.0.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Badge</name>
    <js-module name="badge" src="www/Badge.js">
        <clobbers target="cordova.plugins.Badge"/>
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="Badge">
                <param name="android-package" value="com.azitlab.cordova-plugin-badge.Badge"/>
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/Badge.java" target-dir="src/com/azitlab/cordova-plugin-badge/Badge"/>
    </platform>
</plugin>
